
@{
    ViewData["Title"] = "Access Denied";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section head{
    <style type="text/css">
        .error-page > .error-content {
            margin-left: 0px !important;
        }
    </style>
}

<section class="content">
    <div class="error-page" style="margin-bottom:100px;">
        <h2 class="headline text-yellow"> Access Denied</h2>
        <div class="error-content">
            <h3><i class="fa fa-warning text-yellow"></i> Oops! Not authorised.</h3>
            <p>
                Sorry you are not authorised to access this page.
                Meanwhile, you may return to <a asp-controller="Home" asp-action="Index" style="text-decoration:underline">dashboard</a>.
            </p>
        </div>
    </div>
    <div class="smart-solutions">
        Software for Churches and Charities.....
    </div>
</section>

