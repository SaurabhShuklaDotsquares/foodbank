@model ModalFooter

<div class="modal-footer">
    @if (!Model.OnlySubmitButton)
    {
        <button data-dismiss="modal" id="@Model.CancelButtonID" class="btn btn-default" type="button">
            <i class="fa fa-arrow-circle-left"></i>
            @Model.CancelButtonText
        </button>
    }
    @if (!Model.OnlyCancelButton)
    {
        <button class="btn btn-primary" id="@Model.SubmitButtonID" type="submit">
            @Model.SubmitButtonText
            <i class="fa fa-arrow-circle-right"></i>
        </button>
    }
</div>