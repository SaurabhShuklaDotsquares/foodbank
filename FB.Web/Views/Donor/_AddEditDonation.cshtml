@model FB.Dto.DonorDonationDto
<div id="adminUpdateVetMedicationModal">
    <!-- Modal content-->
    @using (Html.BeginForm("AddDonation", "Donor",
            FormMethod.Post, new { @class = "donat-popup-form" }))
    {
        <div class="modal-content">
            <div class="modal-header">
                <!-- modal header  -->
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title"> Add Food Donations</h4>
            </div>
            <div class="modal-body">
                <!-- begin modal body content  -->
                <input asp-for="DonorId" type="hidden" />
                <input type="hidden" asp-for="FoodItemName" />
                <input type="hidden" asp-for="hdnFoodCategoryId" />
                <input type="hidden" asp-for="hdnFoodProductId" />
                <div class="form-group">
                    <label class="col-xs-12 col-sm-4 control-label" for="Title">Donor Reference</label>
                    <div class="col-xs-12 col-sm-8">
                        <input asp-for="Refrence" class="form-control" placeholder="Donor Reference" type="text" readonly>
                        <span asp-validation-for="Refrence" class="text-red"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-xs-12 col-sm-4 control-label" for="Title">Type of Donation</label>
                    <div class="col-xs-12 col-sm-8">
                        <input asp-for="DonationTypeName" class="form-control" placeholder="Type Of Food" type="text" readonly>
                        <input asp-for="DonationType" class="form-control" type="hidden">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-xs-12 col-sm-4 control-label" for="Title">Choose Food Category</label>
                    <div class="col-xs-12 col-sm-8">
                        <select asp-for="FoodCategoryId" class="form-control food-items" asp-items="@((List<SelectListItem>)ViewBag.FoodItemCatogoriesList)"></select>
                        <span asp-validation-for="FoodCategoryId" class="text-red"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-xs-12 col-sm-4 control-label" for="Title">Choose Food Items</label>
                    <div class="col-xs-12 col-sm-8">
                        <select asp-for="ProductApiId" class="form-control food-items" asp-items="@((List<SelectListItem>)ViewBag.FoodItemList)"></select>
                        <span asp-validation-for="ProductApiId" class="text-red"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-xs-12 col-sm-4 control-label" for="Title">Quantity*</label>
                    <div class="col-xs-12 col-sm-4">
                        <input asp-for="Quantity" class="form-control" placeholder="Quantity" type="number" min="1">
                        <span asp-validation-for="Quantity" class="text-red"></span>
                    </div>
                    <div class="col-xs-12 col-sm-4">
                        <input asp-for="QuantityUnit" class="form-control" placeholder="Unit" type="text">
                        <span asp-validation-for="QuantityUnit" class="text-red"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-xs-12 col-sm-4 control-label" for="Title">Date*</label>
                    <div class="col-xs-12 col-sm-8">
                        <input asp-for="DonationDate" class="form-control datepicker" placeholder="DD/MM/YYYY" type="text">
                        <span asp-validation-for="DonationDate" class="text-red"></span>
                    </div>
                </div>
            </div>
            <div class="frm-footer">

                <button class="btn btn-primary" id="btn-submit" type="submit">
                    Submit
                    <i class="fa fa-arrow-circle-right"></i>
                </button>
            </div>
            <!-- end modal body content  -->
        </div>
    }
</div>
