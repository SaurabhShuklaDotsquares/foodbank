<div id="frm-export-report" class="cmxform">
    <form asp-controller="report" asp-action="export" method="post" asp-antiforgery="true">
        <div id="validation-summary"></div>
        <div class="modal-body form-horizontal">
            @Html.Hidden("Key")
            @Html.Hidden("Other")
            @Html.Hidden("hdnexportbtn")
            @*<div class="form-group">
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <button class="btn btn-warning pull-right" id="btnPreview" type="button" name="btnPreview">
                            Preview
                            <i class="fa fa-arrow-circle-right"></i>
                        </button>
                    </div>
                </div>*@

            <div class="form-group">
                <label class="col-lg-3 col-sm-4 col-md-3 control-label">Title of the Report:</label>
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <input type="text" class="form-control" id="TitalName" name="TitalName" maxlength="50" />
                </div>
                <div class="col-lg-3 col-md-3 col-sm-3">
                    <button class="btn btn-primary" type="button" id="getTital" value="Grantors Report-@DateTime.Now.ToString("dd/MM/yyyy")">Grantors Report + Date</button>
                </div>
            </div>

            <div class="form-group">
                <label class="col-lg-3 col-sm-3 control-label">Footer Name:</label>
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <input type="text" class="form-control" id="FooterName" name="FooterName"  maxlength="50" />
                </div>
            </div>

            <div class="form-group">
                <label class="col-lg-3 col-sm-3 control-label">File Name:</label>
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <input type="text" class="form-control" id="FileName" name="FileName"  maxlength="50" />
                </div>
            </div>

            <div class="form-group">
                <label class="col-lg-3 col-sm-6 control-label">Export as:</label>
                <div class="col-lg-2 col-sm-12">
                    <div class="radio">
                        <label>
                            @Html.RadioButton("rdReportFormat", ExportType.PDF, new { @class = "exportRadio", @checked = "checked" })
                            @ExportType.PDF.ToString()
                        </label>
                    </div>
                </div>
                <div class="col-lg-3 col-sm-12 hidereport excelReport">
                    <div class="radio">
                        <label>
                            @Html.RadioButton("rdReportFormat", ExportType.Excel, new { @class = "exportRadio" })
                            @ExportType.Excel.ToString()
                        </label>
                    </div>
                </div>
                <div class="col-lg-2 col-sm-12 hidereport csvReport hidden">
                    <div class="radio">
                        <label>
                            @Html.RadioButton("rdReportFormat", ExportType.CSV, new { @class = "exportRadio" })
                            @ExportType.CSV.ToString()
                        </label>
                    </div>
                </div>
                <div class="col-lg-2 col-sm-12 wordReport hidden">
                    <div class="radio">
                        <label>
                            @Html.RadioButton("rdReportFormat", ExportType.Word, new { @class = "exportRadio" })
                            @ExportType.Word.ToString()
                        </label>
                    </div>
                </div>
            </div>

            <div class="form-group report-orientation">
                <label class="col-lg-3 col-sm-12 control-label">Report Orientation:</label>

                <div class="col-lg-2 col-sm-12">
                    <div class="radio">
                        <label>
                            @Html.RadioButton("rdReportOrientation", "Portrait", new { @class = "exportRadio", @checked = "checked" })
                            Portrait
                        </label>
                    </div>
                </div>

                <div class="col-lg-3 col-sm-12">
                    <div class="radio">
                        <label>
                            @Html.RadioButton("rdReportOrientation", "Landscape", new { @class = "exportRadio" })
                            Landscape
                        </label>
                    </div>
                </div>
            </div>

        </div>
        <div class="modal-footer">
            <button class="btn btn-warning" id="btnPreview" type="button" name="btnPreview">
                Preview
                <i class="fa fa-arrow-circle-right"></i>
            </button>

            <button class="btn btn-primary" id="btnExportReportSubmit" type="button" name="btnDownload">
                Export
                <i class="fa fa-arrow-circle-right"></i>
            </button>
        </div>
    </form>
</div>