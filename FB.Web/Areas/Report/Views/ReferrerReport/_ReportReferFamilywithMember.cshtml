@model List<FB.Dto.ReportReferrerDto>

<!DOCTYPE html>
<html>
<head>
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            text-align: left;
            padding: 8px;
        }

        .test {
            border-collapse: collapse;
            width: 100%;
            border-bottom: 1px solid;
        }

        /* tr:nth-child(even) {
            background-color: #D6EEEE;
        }*/
    </style>
    @*<link href="~/Content/datatables/dataTables.bootstrap.css" rel="stylesheet" />*@
</head>
<body>
    @if (Model != null)
    {

        <div class="row">
            <br />
        </div>
        <div class="row">
            <table id="grid-label-columns" class="table table-bordered table-striped table-hover">
                <thead>
                    <tr style="text-align:left;background-color:#D6EEEE">
                        <th>Family Name</th>
                        <th>Family Address</th>
                        <th>No of Adults</th>
                        <th>No of Children</th>
                        <th>Date Added</th>
                        <th style="text-align: center;">
                            <table>
                                <tr>
                                    <th colspan="2" style="border-bottom: 1px solid; text-align: center;">Members</th>
                                </tr>
                                <tr>
                                    <th style="border-bottom:none">Name </th>
                                    <th style="border-bottom:none">Dob</th>
                                </tr>
                            </table>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr style="margin-bottom:30px" class="test">
                            <td>@item.FamilyName</td>
                            <td>@item.FullAddressDto.FullAddress</td>
                            <td>@item.NoofAdults</td>
                            <td>@item.NoofChildren</td>
                            <td>@item.AddedDate</td>
                            <td width="20%">
                                <table>
                                    @if (item.FamailyMemberDetails.Count > 0)
                                    {
                                        @foreach (var memberDetail in item.FamailyMemberDetails)
                                        {
                                            <tr>
                                                <td>@memberDetail.FamilyMemberName</td>
                                                <td>@memberDetail.Dob</td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td>--</td>
                                            <td>--</td>
                                        </tr>
                                    }


                                </table>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <h4>Total:&nbsp;&nbsp;@Model.Count</h4>
    }
</body>
</html>
