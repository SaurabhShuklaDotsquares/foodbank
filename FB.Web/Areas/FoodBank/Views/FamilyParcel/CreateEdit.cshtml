@model FB.Dto.FamilyParcelDto

@{
    ViewBag.Title = "Add Parcel";
}

<div class="inner-bg">
    <section class="content-header">
        <h1>
            @(Model.ParcelId==0? "Add Parcel" : "Edit Parcel")
        </h1>
    </section>
    <section class="content">
        <partial name="_Notification" />
        <div id="frm-create-donor" class="cmxform donor-form">
            <form method="post" novalidate="novalidate" id="create-edit-form">
                <div id="validation-summary-create-donor"></div>
                <input type="hidden" asp-for="ParcelId" />
                <div class="frm-main">

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="col-sm-4 col-xs-12 control-label" for="ParcelTypeId">
                                    Choose Parcel Type <span class="redtext">*</span>
                                </label>
                                <div class="col-sm-8 col-xs-12">
                                    <select asp-for="ParcelTypeId" class="form-control ddlParcelTypeId" asp-items="@((List<SelectListItem>)ViewBag.ParcelTypeList)"></select>
                                    <span asp-validation-for="ParcelTypeId" class="text-red"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6" id="divStandardType" style="display:none;">
                            <div class="form-group">
                                <label class="col-sm-4 col-xs-12 control-label" for="StandardParcelId">
                                    Choose Standard Parcel
                                </label>
                                <div class="col-sm-8 col-xs-12">
                                    <select asp-for="StandardParcelId" class="form-control ddlStandardParcelTypeId" asp-items="@((List<SelectListItem>)ViewBag.StandardParcelList)"></select>
                                    <span asp-validation-for="StandardParcelId" class="text-red"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="col-sm-4 col-xs-12 control-label" for="PackerId">Choose Packer <span class="redtext">*</span></label>
                                <div class="col-sm-8 col-xs-12">
                                    <select asp-for="PackerId" class="form-control ddlPacker" asp-items="@((List<SelectListItem>)ViewBag.PackerList)"></select>
                                    <span asp-validation-for="PackerId" class="text-red"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="col-sm-4 col-xs-12 control-label" for="DeliverrerId">Choose Deliverrer  <span class="redtext">*</span></label>
                                <div class="col-sm-8 col-xs-12">
                                    <select asp-for="DeliverrerId" class="form-control ddlDeliverrer" asp-items="@((List<SelectListItem>)ViewBag.PackerList)"></select>
                                    <span asp-validation-for="DeliverrerId" class="text-red"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="col-sm-4 col-xs-12 control-label" for="DeliveryDate">Date of Delivery  <span class="redtext">*</span></label>
                                <div class="col-sm-8 col-xs-12">
                                    <input class="form-control datepicker" asp-for="DeliveryDate" placeholder="DD/MM/YYYY">
                                    <span asp-validation-for="DeliveryDate" class="text-red"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="col-sm-4 col-xs-12 control-label" for="PackOnDate">Pack On Date  <span class="redtext"></span></label>
                                <div class="col-sm-8 col-xs-12">
                                    <input class="form-control datepicker" asp-for="PackOnDate" placeholder="DD/MM/YYYY">
                                    <span asp-validation-for="PackOnDate" class="text-red"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="col-sm-4 col-xs-12 control-label" for="DeliveredDate">Delivered Date</label>
                                <div class="col-sm-8 col-xs-12">
                                    <input class="form-control datepicker" asp-for="DeliveredDate" placeholder="DD/MM/YYYY">
                                    <span asp-validation-for="DeliveredDate" class="text-red"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="col-sm-4 col-xs-12 control-label" for="SpecialNote">Special Notes</label>
                                <div class="col-sm-8 col-xs-12">
                                    <textarea asp-for="SpecialNote" type="text" class="form-control" rows="10" cols="10" maxlength="400"></textarea>
                                    <span asp-validation-for="SpecialNote" class="text-red"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row divfamily">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="col-sm-4 col-xs-12 control-label" for="FamilyId">Choose Family<span class="redtext">*</span> </label>
                                <div class="col-sm-8 col-xs-12">
                                    <select asp-for="FamilyId" class="form-control" asp-items="@((List<SelectListItem>)ViewBag.FamilyList)"></select>
                                    <span asp-validation-for="FamilyId" class="text-red"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">

                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="col-sm-4 col-xs-12 control-label"></label>
                                <div class="col-sm-8 col-xs-12">
                                    <input type="checkbox" asp-for="IncludeRecipe" />
                                    <label asp-for="IncludeRecipe">Include Recipe?</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row divIsInclude" style="display:none;">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="col-sm-4 col-xs-12 control-label" for="RecipeId">Choose Recipe</label>
                                <div class="col-sm-8 col-xs-12">
                                    <select asp-for="RecipeId" class="form-control ddlRecipeId" asp-items="@((List<SelectListItem>)ViewBag.RecipeList)"></select>
                                    <span asp-validation-for="RecipeId" class="text-red"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="col-sm-4 col-xs-12 control-label" for="GrantorId">Choose Voucher</label>
                                <div class="col-sm-8 col-xs-12">
                                    <select asp-for="VoucherId" class="form-control ddlGrantor" asp-items="@((List<SelectListItem>)ViewBag.VoucherList)"></select>
                                  
                                </div>
                            </div>
                        </div>
                        @*<div class="col-sm-6">
                <div class="form-group">
                    <label class="col-sm-4 col-xs-12 control-label" for="GrantorId">Choose Grantor  <span class="redtext">*</span></label>
                    <div class="col-sm-8 col-xs-12">
                        <select asp-for="GrantorId" class="form-control ddlGrantor" asp-items="@((List<SelectListItem>)ViewBag.GrantorList)"></select>
                        <span asp-validation-for="GrantorId" class="text-red"></span>
                    </div>
                </div>
            </div>*@
                    </div>


                    <div class="row marT25">
                        <fieldset class="field-border-block">
                            <legend><strong>Add Food Items</strong></legend>
                            <div class="row">
                                <input type="hidden" asp-for="ParcelTypeId" />
                                <div class="col-sm-5">
                                    <div class="form-group">
                                        <label class="col-xs-12 col-sm-5 control-label" for="Title">Choose Food Items <span class="redtext">*</span></label>
                                        <div class="col-xs-12 col-sm-7">
                                            <select asp-for="FoodItemId" class="form-control food-items" asp-items="@((List<SelectListItem>)ViewBag.FoodItemList)"></select>
                                            <span asp-validation-for="FoodItemId" class="text-red"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-5">
                                    <div class="form-group">
                                        <label class="col-xs-12 col-sm-2 control-label" for="Title">Quantity <span class="redtext">*</span></label>
                                        <div class="col-xs-12 col-sm-4">
                                            <input asp-for="Quantity" class="form-control" placeholder="Quantity" onkeypress="OnlyIntvaluepacel(this)" onkeyup="OnlyIntvaluepacel(this)" type="number" min="1">
                                            <span asp-validation-for="Quantity" class="text-red"></span>
                                        </div>
                                        <div class="col-xs-12 col-sm-3">
                                            <input asp-for="QuantityUnit" class="form-control" placeholder="Unit" type="text" disabled>
                                            <span asp-validation-for="QuantityUnit" class="text-red"></span>
                                        </div>
                                        <div class="col-xs-12 col-sm-3">
                                            <input asp-for="AvailableQuantity" class="form-control" placeholder="Avail." type="text" disabled>
                                            <span asp-validation-for="AvailableQuantity" class="text-red"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-1">
                                    <div class="form-group">
                                        <button class="btn btn-primary" id="btnaddfooditem" type="button">
                                            Save
                                            <i class="fa fa-arrow-circle-right"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                    </div>

                    <div class="row marT25">
                        <div class="col-sm-12">
                            <div class="table-responsive">
                                <table class="table table-bordered table-striped table-condensed food-table" id="tablefamilyfooditem">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Quantity</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>

                                    <tbody id="fooditemtable">
                                        @if (Model.FamilyParcelList.Count > 0)
                                        {
                                            @foreach (var item in Model.FamilyParcelList)
                                            {
                                                <tr >

                                                    <td width="50%">
                                                        <input name="hdnfoodItemId" type="hidden" value="@item.FoodItemId" />
                                                        <input class="form-control" placeholder="Food Item" name="" type="text" value="@item.FoodItemName" readonly>
                                                    </td>
                                                    <td>
                                                        <input class="form-control tbl-quantity" onkeypress="OnlyIntvaluepacel(this)" onkeyup="OnlyIntvaluepacel(this)" data-foodId="@item.FoodItemId" data-oldval="@item.Quantity" placeholder="Quantity" name="itemquantity" type="number" min="1" max="9999" maxlength="5" value="@item.Quantity">
                                                    </td>

                                                    <td style="">
                                                        <a class="deleterow" data-id="" style="display:block;">
                                                            <img src="~/Content/images/delete.png" width="22px" />
                                                        </a>
                                                    </td>

                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr class="odd norecord" role="row">
                                                <td colspan="3" style="text-align:center">
                                                    <label>No records found.</label>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="frm-footer">
                    <a asp-controller="familyparcel" asp-action="index" data-dismiss="modal" id="btn-cancel" class="btn btn-default" type="button">
                        <i class="fa fa-arrow-circle-left"></i>
                        Cancel
                    </a>
                    <button class="btn btn-primary" id="btn-submit" type="button">
                        Save
                        <i class="fa fa-arrow-circle-right"></i>
                    </button>
                </div>
            </form>
        </div>
    </section>
</div>

@section scripts{
    <script>
        function OnlyIntvaluepacel(textbox) {
            
            if (textbox.value.length > 5) {

                textbox.value = '';//textbox.value.replace(/(\..*)\./g, '$1');;
            }
            textbox.value = textbox.value.replace(/[^0-9]/g, '');
            textbox.value = textbox.value.replace(/(\..*)\./g, '$1');
           
        }
    </script>
    <script src="~/Scripts/custom/family-parcel/create-edit.js"></script>
}
