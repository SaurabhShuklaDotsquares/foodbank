@model FB.Dto.FoodDonationDto
<div id="adminUpdateVetMedicationModal">
    <!-- Modal content-->
    @using (Html.BeginForm("AddFoodDonation", "Donation", FormMethod.Post, new { @class = "donat-popup-form" }))
    {
        <div class="modal-content">
            <div class="modal-header">
                <!-- modal header  -->
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title"> View Food Donations</h4>
            </div>
            <div class="modal-body">
                <!-- begin modal body content  -->

                <div class="form-group">
                    <label class="col-xs-12 col-sm-4 control-label" for="Title">Status</label>
                    <div class="col-xs-12 col-sm-8">
                        <select asp-for="Status" id="Status" name="Status" class="form-control create-donor-country" disabled>
                            <option>Select</option>
                            <option value="0">Pledged</option>
                            <option value="1"> Pledged & Donated, Received</option>
                        </select>
                        <span asp-validation-for="Status" class="text-red"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-xs-12 col-sm-4 control-label" for="Title"> Charity</label>
                    <div class="col-xs-12 col-sm-8">
                        @Html.DropDownList("CharityID", (List<SelectListItem>)ViewBag.Charities, new { @class = "form-control", @style = "min-width:300px", @disabled = "disabled" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-xs-12 col-sm-4 control-label" for="Title"> Branch</label>
                    <div class="col-xs-12 col-sm-8">
                        @Html.DropDownList("BranchID", (List<SelectListItem>)ViewBag.Branches, new { @class = "form-control", @style = "min-width:300px", @disabled = "disabled" })

                    </div>
                </div>
                <div class="form-group">
                    <label class="col-xs-12 col-sm-4 control-label" for="Title">Choose Donor</label>
                    <div class="col-xs-12 col-sm-8">
                        <select asp-for="DonorId" id="DonorId" class="form-control" name="DonorId" asp-items="@((List<SelectListItem>)ViewBag.donorItemList)" disabled></select>
                        <span asp-validation-for="DonorId" class="text-red"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-xs-12 col-sm-4 control-label" for="Title">Date Of Donation</label>
                    <div class="col-xs-12 col-sm-8">
                        <input asp-for="DonationDate" id="DonationDate" name="DonationDate" class="form-control datepicker" placeholder="DD/MM/YYYY" type="text" disabled>
                        <span asp-validation-for="DonationDate" class="text-red"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-xs-12 col-sm-4 control-label" for="Title">Choose Food Items</label>
                    <div class="col-xs-12 col-sm-8">
                        <select asp-for="FoodIId" class="form-control food-items" asp-items="@((List<SelectListItem>)ViewBag.FoodItemList)" disabled></select>
                        <span asp-validation-for="FoodIId" class="text-red"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-xs-12 col-sm-4 control-label" for="Title">Quantity</label>
                    <div class="col-xs-12 col-sm-4">
                        <input asp-for="Quantity" class="form-control" placeholder="Quantity" type="number" min="1" disabled>
                        <span asp-validation-for="Quantity" class="text-red"></span>
                    </div>
                    <div class="col-xs-12 col-sm-4">
                        <input asp-for="QuantityUnit" class="form-control" placeholder="Unit" type="text" disabled>
                        <span asp-validation-for="QuantityUnit" class="text-red"></span>
                    </div>
                </div>

            </div>
            <!-- end modal body content  -->
        </div>
    }
</div>
