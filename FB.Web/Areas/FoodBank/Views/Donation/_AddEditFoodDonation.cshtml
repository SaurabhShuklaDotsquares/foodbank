@model FB.Dto.FoodDonationDto
<div id="adminUpdateVetMedicationModal">
    <!-- Modal content-->
    @using (Html.BeginForm("AddFoodDonation", "Donation", FormMethod.Post, new { @class = "donat-popup-form" }))
    {
        <div class="modal-content">
            <div class="modal-header">
                <!-- modal header  -->
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title"> @(Model.FoodIId>0? "Edit Food Donations" : "Add Food Donations")</h4>
            </div>
            <div class="modal-body">
                <!-- begin modal body content  -->
                <input type="hidden" asp-for="FoodItemId" />
                <input type="hidden" asp-for="FoodItemName" />
                <input type="hidden" asp-for="hdnFoodCategoryId" />
                <input type="hidden" asp-for="hdnFoodProductId" />
                <div class="form-group">
                    <label class="col-xs-12 col-sm-4 control-label" for="Title">Status</label>
                    <div class="col-xs-12 col-sm-8">
                        <select asp-for="Status" id="Status" name="Status" class="form-control create-donor-country">
                            <option>Select</option>
                            <option value="0">Pledged</option>
                            <option value="1"> Pledged & Donated, Received</option>
                        </select>
                        <span asp-validation-for="Status" class="text-red"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-xs-12 col-sm-4 control-label" for="Title">Choose Charity</label>
                    <div class="col-xs-12 col-sm-8">
                        @Html.DropDownList("CharityID3", (List<SelectListItem>)ViewBag.Charities, new { @class = "form-control", @style = "min-width:300px" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-xs-12 col-sm-4 control-label" for="Title">Choose Branch</label>
                    <div class="col-xs-12 col-sm-8">
                        @Html.DropDownList("BranchID3", (List<SelectListItem>)ViewBag.Branches, new { @class = "form-control", @style = "min-width:300px" })

                    </div>
                </div>
                <div class="form-group">
                    <label class="col-xs-12 col-sm-4 control-label" for="Title">Choose Donor<span class="redtext">*</span></label>
                    <div class="col-xs-12 col-sm-8">
                        <select asp-for="DonorId" id="DonorId" class="form-control" name="DonorId" asp-items="@((List<SelectListItem>)ViewBag.donorItemList)"></select>
                        <span asp-validation-for="DonorId" class="text-red"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-xs-12 col-sm-4 control-label" for="Title">Date Of Donation*</label>
                    <div class="col-xs-12 col-sm-8">
                        <input asp-for="DonationDate" id="DonationDate" name="DonationDate" class="form-control datepicker" placeholder="DD/MM/YYYY" type="text">
                        <span asp-validation-for="DonationDate" class="text-red"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-xs-12 col-sm-4 control-label" for="Title">Choose Food Category<span class="redtext">*</span></label>
                    <div class="col-xs-12 col-sm-8">
                        <select asp-for="FoodCategoryId" class="form-control food-items" asp-items="@((List<SelectListItem>)ViewBag.FoodItemCatogoriesList)"></select>
                        <span asp-validation-for="FoodCategoryId" class="text-red"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-xs-12 col-sm-4 control-label" for="Title">Choose Food Items<span class="redtext">*</span></label>
                    <div class="col-xs-12 col-sm-8">
                        <select asp-for="ProductApiId" class="form-control food-items" asp-items="@((List<SelectListItem>)ViewBag.FoodItemList)"></select>
                        <span asp-validation-for="ProductApiId" class="text-red"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-xs-12 col-sm-4 control-label" for="Title">Quantity<span class="redtext">*</span></label>
                    <div class="col-xs-12 col-sm-4">
                        <input asp-for="Quantity" class="form-control" placeholder="Quantity" type="number" min="1">
                        <span asp-validation-for="Quantity" class="text-red"></span>
                    </div>
                    <div class="col-xs-12 col-sm-4">
                        <input asp-for="QuantityUnit" class="form-control" placeholder="Unit" type="text">
                        <span asp-validation-for="QuantityUnit" class="text-red"></span>
                    </div>
                </div>

            </div>
            <div class="frm-footer">
                <button class="btn btn-primary" id="btn-submit" type="submit">
                    Submit
                    <i class="fa fa-arrow-circle-right"></i>
                </button>
            </div>
            <!-- end modal body content  -->
        </div>
    }
</div>
