@model FB.Dto.FeedbackMasterDTO
<div id="frm-create-edit-user-defined-field" class="cmxform">
    <form asp-controller="Feedback" asp-action="CreateEdit" asp-antiforgery="true" method="post">
        <partial name="_ModalHeader" model='new ModalHeader { Heading = @Model.FieldId == 0 ? "Add Feedback Form Question" : "Edit Feedback Form Question" }' />
        <div id="validation-summary"></div>
        <input type="hidden" asp-for="FieldId" />
      
        <div class="modal-body form-horizontal">

            <div class="form-group" style="display:none">
                <label asp-for="IsHouseHold" class="col-lg-4 col-sm-4 control-label"></label>
                <div class="col-lg-8 col-sm-8">
                    <select asp-for="IsHouseHold" class="form-control" asp-items="@((List<SelectListItem>)ViewBag.FamilyOrIndividual)"></select>
                    <span asp-validation-for="IsHouseHold" class="text-red"></span>
                </div>
            </div>

            <div class="form-group">
                <label  class="col-lg-4 col-sm-4 control-label">Question</label>
                <div class="col-lg-8 col-sm-8">
                    <input asp-for="FieldDescription" class="form-control" />
                    <span asp-validation-for="FieldDescription" class="text-red"></span>
                </div>
            </div>

            <div class="form-group">
                <label class="col-lg-4 col-sm-4 control-label">Question Type</label>
                <div class="col-lg-8 col-sm-8">
                    <select asp-for="FieldType" class="form-control" asp-items="@((List<SelectListItem>)ViewBag.UserFieldTypes)"></select>
                    <span asp-validation-for="FieldType" class="text-red"></span>
                </div>
            </div>

            <div class="form-group user-defined-field-type-without-list">
                <label asp-for="FieldDefaultValue" class="col-lg-4 col-sm-4 control-label"></label>
                <div class="col-lg-8 col-sm-8">
                    <input asp-for="FieldDefaultValue" class="form-control" />
                    <span asp-validation-for="FieldDefaultValue" class="text-red"></span>
                </div>
            </div>

            <div class="form-group user-defined-field-logical">
                <label class="col-lg-4 col-sm-4 control-label"></label>
                <div class="col-lg-8 col-sm-8">
                    <input type="checkbox" asp-for="IsLogical" />
                    <label asp-for="IsLogical"></label>
                </div>
            </div>

            <div class="form-group user-defined-field-type-list">
                <label asp-for="UserDefinedFieldOptionList" class="col-lg-4 col-sm-4 control-label"></label>
                <div class="col-lg-8 col-sm-8">
                    <input asp-for="UserDefinedFieldOptionList" class="form-control" />
                    <span asp-validation-for="UserDefinedFieldOptionList" class="text-red"></span>
                    <label>Please use comma (,) for add multiple list options like (option X, option Y).</label>
                </div>
            </div>

            <div class="form-group user-defined-field-type-list">
                <label asp-for="ListFieldDefaultValue" class="col-lg-4 col-sm-4 control-label"></label>
                <div class="col-lg-8 col-sm-8">
                    <select asp-for="ListFieldDefaultValue" class="form-control"></select>
                    <span asp-validation-for="ListFieldDefaultValue" class="text-red"></span>
                    <input type="hidden" id="hdnListFieldDefaultValue" value="@(Model.ListFieldDefaultValue)" />
                </div>
            </div>

            <div class="form-group">
                <label class="col-lg-4 col-sm-4 control-label"></label>
                <div class="col-lg-8 col-sm-8">
                    <input type="checkbox" asp-for="IsAutoAssignDefaultValue" />
                    <label asp-for="IsAutoAssignDefaultValue"></label>
                </div>
            </div>

        </div>
        <partial name="_ModalFooter" model='new ModalFooter { }' />
    </form>
</div>