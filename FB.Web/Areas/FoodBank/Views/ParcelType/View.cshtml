@model FB.Dto.ParcelTypeDto

@{
    ViewBag.Title = "View Parcel Type";
}

<div class="inner-bg">
    <section class="content-header">
        <h1>
            @(Model.ParcelTypeId==0? "View Parcel Type" : "View Parcel Type")
        </h1>
    </section>
    <section class="content">
        <partial name="_Notification" />
        @section head{
            <link href="~/Scripts/plugins/select2/select2.css" rel="stylesheet" />
            <link href="~/Scripts/plugins/select2/select2-bootstrap.css" rel="stylesheet" />
            <link href="~/Content/datatables/dataTables.bootstrap.css" rel="stylesheet" />
            <link href="~/Scripts/plugins/datepicker/datepicker3.css" rel="stylesheet" />
            <link href="~/Scripts/plugins/bootstrap-tokenfield/dist/css/bootstrap-tokenfield.css" rel="stylesheet" />
            <link href="~/Scripts/plugins/bootstrap-tokenfield/dist/css/tokenfield-typeahead.css" rel="stylesheet" />
        }
        <div id="frm-create-donor" class="cmxform donor-form">
            <div id="validation-summary-create-donor"></div>
            <input type="hidden" id="hdnParcelTypeId" asp-for="ParcelTypeId" />
            <div class="frm-main">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="col-sm-5 col-xs-12 control-label" for="Title">Title</label>
                            <div class="col-sm-7 col-xs-12">
                                @if (Model.ParcelTypeId > 0)
                                {
                                    <input class="form-control " asp-for="Title" placeholder="Title" type="text" disabled>
                                }
                                else
                                {
                                    <input class="form-control " asp-for="Title" placeholder="Title" type="text">
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row marT25">

                    <div class="col-sm-12">
                        <table id="grid-parceltype-fooditem" class=" table table-bordered table-striped table-condensed food-table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>S.No</th>
                                    <th>Food Item Name</th>
                                    <th>Quantity</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                            <tfoot></tfoot>
                        </table>
                    </div>
                </div>
            </div>

            <div class="frm-footer">
                <a asp-controller="parceltype" asp-action="index" data-dismiss="modal" id="btn-cancel" class="btn btn-default" type="button">
                    <i class="fa fa-arrow-circle-left"></i>
                    Cancel
                </a>
            </div>
        </div>
    </section>
</div>

@section scripts{

        <script src="~/Scripts/plugins/select2/select2.js"></script>
        <script src="~/Scripts/plugins/input-mask/jquery.inputmask.js"></script>
        <script src="~/Scripts/plugins/input-mask/jquery.inputmask.date.extensions.js"></script>
        <script src="~/Scripts/plugins/datepicker/bootstrap-datepicker.js"></script>


        <script src="~/Scripts/plugins/bootstrap-tokenfield/dist/bootstrap-tokenfield.js"></script>


    
    <script src="~/Scripts/custom/parceltype/create-edit.js"></script>
    <script>

        $(document).ready(function () {
            var table = $('#grid-parceltype-fooditem').DataTable();

            var column = table.column(4);

            column.visible(!column.visible());
        });

    </script>
}

