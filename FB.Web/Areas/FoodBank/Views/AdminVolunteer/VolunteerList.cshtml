
@{
    ViewBag.Title = "Volunteerist";

    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section head{
    <link href="~/Scripts/plugins/select2/select2.css" rel="stylesheet" />
    <link href="~/Scripts/plugins/select2/select2-bootstrap.css" rel="stylesheet" />
    <link href="~/Content/datatables/dataTables.bootstrap.css" rel="stylesheet" />
    <link href="~/Scripts/plugins/datepicker/datepicker3.css" rel="stylesheet" />
    <link href="~/Scripts/plugins/bootstrap-tokenfield/dist/css/bootstrap-tokenfield.css" rel="stylesheet" />
    <link href="~/Scripts/plugins/bootstrap-tokenfield/dist/css/tokenfield-typeahead.css" rel="stylesheet" />
}
<div class="wrapper">
    <div class="">
        <div class="inner-bg">
            <section class="content-header">
                <h1>
                    Volunteers
                </h1>
            </section>
            <section class="content">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="nav-tabs-custom">
                            <ul class="nav nav-tabs">
                                <li class="active"><a href="#food" data-toggle="tab"> Registered Volunteers</a></li>
                                <li><a href="#referral" data-toggle="tab">Deliveries or Packing</a></li>
                            </ul>
                            <div class="tab-content donations-tab">

                                <div id="food" class="tab-pane active">
                                    <div class="content form-horizontal">
                                        <div class="table-top add-btn-main">

                                            <div class="col-lg-12 col-sm-12 col-xs-12 filter-data" style="background: #efeded; margin:0px 0px 20px 0px;padding:10px 0px">
                                                <div class="col-lg-2 col-sm-12 col-xs-12" style="">
                                                    <label>Charity  </label>
                                                </div>
                                                <div class="col-lg-4 col-sm-12 col-xs-12">
                                                    @Html.DropDownList("CharityIDRef", (List<SelectListItem>)ViewBag.Charities, new { @class = "form-control", @style = "min-width:300px" })
                                                </div>
                                            </div>


                                            
                                        </div>


                                        <table id="grid-my-volunteer" class="table table-bordered table-striped table-condensed food-table">
                                            <thead>
                                                <tr>
                                                    <th>ID</th>
                                                    <th>S.No.</th>
                                                    <th>Volunteer Name</th>
                                                    <th>Contact Number</th>
                                                    <th>Individual or Couple</th>
                                                    <th>Packing or Delivery</th>
                                                    <th>Registered on Date</th>

                                                    <th width="15%">Action</th>
                                                </tr>
                                            </thead>
                                            <tbody></tbody>
                                            <tfoot></tfoot>
                                        </table>
                                    </div>
                                </div>

                                <div id="referral" class="tab-pane">
                                    <div class="content form-horizontal">
                                        <div class="col-lg-12 col-sm-12 col-xs-12 filter-data" style="background: #efeded; margin:0px 0px 20px 0px;padding:10px 0px">
                                            <div class="col-lg-2 col-sm-12 col-xs-12" style="">
                                                <label>Charity  </label>
                                            </div>
                                            <div class="col-lg-4 col-sm-12 col-xs-12">
                                                @Html.DropDownList("CharityID", (List<SelectListItem>)ViewBag.Charities, new { @class = "form-control", @style = "min-width:300px" })
                                            </div>
                                        </div>
                                        <div class="">
                                            <table id="grid-my-delivery" class="table table-bordered table-responsive table-striped table-condensed food-table">
                                                <thead>
                                                    <tr>
                                                        <th>ID</th>
                                                        <th>S.No.</th>
                                                        <th>Volunteer Name</th>
                                                        <th>Contact Number</th>
                                                        <th>Individual or Couple</th>
                                                        <th>Packing or Delivery</th>
                                                        <th>Pending Deliveries</th>
                                                        <th width="15%">Action</th>
                                                    </tr>
                                                </thead>
                                                <tbody></tbody>
                                                <tfoot></tfoot>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

        </div>
    </div>
</div>
@section scripts{
    <script src="~/Scripts/plugins/select2/select2.js"></script>
    <script src="~/Scripts/plugins/input-mask/jquery.inputmask.js"></script>
    <script src="~/Scripts/plugins/input-mask/jquery.inputmask.date.extensions.js"></script>
    <script src="~/Scripts/plugins/datepicker/bootstrap-datepicker.js"></script>
    <script src="~/Scripts/custom/volunteer/admin-volunteerlist.js"></script>

    <script src="~/Scripts/plugins/bootstrap-tokenfield/dist/bootstrap-tokenfield.js"></script>


}


<partial name="_Modal" model='new Modal { ID="modal-delete-volunteer" , AreaLabeledId="modal-delete-volunteer-label" , Size=ModalSize.Medium }' />

<partial name="_Modal" model='new Modal { ID="modal-delete-delivilery" , AreaLabeledId="modal-delete-delivilery-label" , Size=ModalSize.Medium }' />
