
@{
    ViewData["Title"] = "Index";
}

@section head{
    <link href="~/Scripts/plugins/select2/select2.css" rel="stylesheet" />
    <link href="~/Scripts/plugins/select2/select2-bootstrap.css" rel="stylesheet" />
    <link href="~/Content/datatables/dataTables.bootstrap.css" rel="stylesheet" />
}

@section scripts{
    <script src="~/Scripts/plugins/select2/select2.js"></script>
    <script src="~/Scripts/custom/role/role-index.js"></script>
    <script src="~/Scripts/custom/role/assign-permission.js"></script>
}

<section class="content-header">
    <h1>
        Roles & Permissions
    </h1>
</section>

<!-- Main content -->
<section class="content">
    <div class="box">
        <partial name="_Notification" />
        <div class="box-header">
            <div class="btn-group">
                <a data-toggle="modal" href="@Url.Action("CreateEdit","Role")" data-target="#modal-create-edit-role" class="btn btn-primary">
                    Add New <i class="fa fa-plus"></i>
                </a>
            </div>
        </div>
        <div class="box-body ">
            @if (CurrentUser.OrganisationID == 0)
            {
                <div class="col-lg-12 col-sm-12 col-xs-12 filter-data" style="background: #efeded; margin:0px 0px 20px;padding:10px 0px">
                    <div class="col-lg-1 col-sm-12 col-xs-12" style="margin-top:5px;">
                        <label>Filter : </label>
                    </div>
                    <div class="col-lg-4 col-sm-12 col-xs-12">
                        @Html.DropDownList("CentralOfficeID", (List<SelectListItem>)ViewBag.Organisations, "Select Organisation...", new { @class = "form-control" })
                    </div>
                </div>
            }
            <table id="grid-role" class="table table-bordered table-striped table-hover">
                <thead>
                    <tr>
                        <th>Role</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</section>
<partial name="_Modal" model='new Modal { ID = "modal-create-edit-role", AreaLabeledId = "modal-create-edit-role-label", Size = ModalSize.Medium }' />
<partial name="_Modal" model='new Modal { ID = "modal-delete-role", AreaLabeledId = "modal-delete-role-label", Size = ModalSize.Medium }' />
<partial name="_Modal" model='new Modal { ID = "modal-assign-permission", AreaLabeledId = "modal-assign-permission-label", Size = ModalSize.Large }' />

