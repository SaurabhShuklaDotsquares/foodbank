@model List<FB.Dto.RoleDto>
@{
    ViewBag.Title = "Role Privileges";
}

@section head{
    <link href="~/Scripts/plugins/select2/select2.css" rel="stylesheet" />
    <link href="~/Scripts/plugins/select2/select2-bootstrap.css" rel="stylesheet" />
    <link href="~/Content/datatables/dataTables.bootstrap.css" rel="stylesheet" />
}

@section scripts{
    <script src="~/Scripts/plugins/select2/select2.js"></script>
    <script src="~/Scripts/custom/role/assign-permission.js"></script>
    <script src="~/Scripts/custom/role/role-permission.js"></script>

}

<section class="content-header">
    <h1>
        Roles & Permissions
    </h1>
</section>
<section class="content">
    <div class="row">
        <div class="box" id="frm-edit-tax-year">
            <partial name="_Notification" />
            <div class="box-body">
                @foreach (var role in Model)
                {
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="col-lg-3 col-md-4 col-sm-6 col-xs-6">
                            <div class="form-group">
                                <label>
                                    @role.RoleName.ToTitle()
                                </label>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                            <a data-toggle="modal" href="@Url.Action("MMORolePermission", "Role", new { roleId = role.RoleID })" data-target="#modal-assign-permission" class="btn btn-primary">Permissions</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

<partial name="_Modal" model='new Modal { ID = "modal-assign-permission", AreaLabeledId = "modal-assign-permission-label", Size = ModalSize.Large }' />
