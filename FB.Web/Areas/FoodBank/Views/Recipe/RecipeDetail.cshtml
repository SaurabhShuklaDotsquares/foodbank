@model FB.Dto.FoodbankRecipeDto
@{
    ViewBag.Title = "RecipeDetail";
}
@section head{
    <link href="~/Scripts/plugins/select2/select2.css" rel="stylesheet" />
    <link href="~/Scripts/plugins/select2/select2-bootstrap.css" rel="stylesheet" />
    <link href="~/Content/datatables/dataTables.bootstrap.css" rel="stylesheet" />
    <link href="~/Scripts/plugins/datepicker/datepicker3.css" rel="stylesheet" />
    <link href="~/Scripts/plugins/bootstrap-tokenfield/dist/css/bootstrap-tokenfield.css" rel="stylesheet" />
    <link href="~/Scripts/plugins/bootstrap-tokenfield/dist/css/tokenfield-typeahead.css" rel="stylesheet" />
}
<div class="">
    <div class="inner-bg">
        <section class="content-header">
            <h1>Recipe Detail</h1>
        </section>
        <section class="content">
            <div id="frm-create-donor" class="cmxform donor-form ">
                <div id="validation-summary-create-donor"></div>
                <input asp-for="Id" name="Id" id="Id" type="hidden" />

                <input type="hidden" id="hdnParcelTypeId" asp-for="Id" />
                <div class="frm-main">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label asp-for="RecipeNumber" class="col-sm-5 col-xs-12 control-label">Recipe ID Number<span class="redtext">*</span></label>
                                <div class="col-sm-7 col-xs-12">
                                    <input class="form-control " asp-for="RecipeNumber" name="RecipeNumber" id="RecipeNumber" placeholder="Recipe ID Number" type="text" disabled="disabled">
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="IsRecipeNeedToCook" class="col-sm-5 col-xs-12 control-label">Recipe needs to cook?</label>
                                <div class="col-sm-7 col-xs-12">
                                    <input data-val="true" asp-for="IsRecipeNeedToCook" name="IsRecipeNeedToCook" id="IsRecipeNeedToCook" type="checkbox" disabled="disabled">
                                </div>
                            </div>

                            <div class="form-group txt-area">
                                <label asp-for="CookingInstructions" class="col-sm-5 col-xs-12 control-label ">Cooking Instructions</label>
                                <div class="col-sm-7 col-xs-12">
                                    <textarea asp-for="CookingInstructions" name="CookingInstructions" id="CookingInstructions" class="form-control" rows="4" cols="50" disabled="disabled"></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label asp-for="RecipeTitle" class="col-sm-5 col-xs-12 control-label">Recipe Title<span class="redtext">*</span></label>
                                <div class="col-sm-7 col-xs-12">
                                    <input asp-for="RecipeTitle" name="RecipeTitle" id="RecipeTitle" class="form-control " placeholder="Recipe Title" type="text" disabled="disabled">
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Quntity" class="col-sm-5 col-xs-12 control-label">How much quantity<span class="redtext">*</span></label>
                                <div class="col-sm-7 col-xs-12">
                                    <input asp-for="Quntity" name="Quntity" id="Quntity" class="form-control " placeholder="Quntity" type="number" min="1" disabled="disabled" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row marT25">

                        <div class="col-sm-12">
                            <table id="grid-parceltype-fooditem" class=" table table-bordered table-striped table-condensed food-table">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>S.No</th>
                                        <th>Food Item Name</th>
                                        <th>Quantity</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                                <tfoot></tfoot>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="frm-footer">
                    <a href="~/Foodbank/Recipe/Index" class="btn btn-default">
                        <i class="fa fa-arrow-circle-left"></i>
                        Back
                    </a>
                </div>
            </div>
        </section>
    </div>
</div>

@section scripts{
    <script src="~/Scripts/plugins/select2/select2.js"></script>
    <script src="~/Scripts/plugins/input-mask/jquery.inputmask.js"></script>
    <script src="~/Scripts/plugins/input-mask/jquery.inputmask.date.extensions.js"></script>
    <script src="~/Scripts/plugins/datepicker/bootstrap-datepicker.js"></script>


    <script src="~/Scripts/plugins/bootstrap-tokenfield/dist/bootstrap-tokenfield.js"></script>
    <script src="~/Scripts/custom/FoodbankRecipe/addreceipe.js"></script>
    <script>

            $(document).ready(function () {
                var table = $('#grid-parceltype-fooditem').DataTable();

            var column = table.column(4);

            column.visible(!column.visible());
            });


    </script>
}