
@{
    ViewBag.Title = "Recipe";
}
@section head{
    <link href="~/Scripts/plugins/select2/select2.css" rel="stylesheet" />
    <link href="~/Scripts/plugins/select2/select2-bootstrap.css" rel="stylesheet" />
    <link href="~/Content/datatables/dataTables.bootstrap.css" rel="stylesheet" />
    <link href="~/Scripts/plugins/datepicker/datepicker3.css" rel="stylesheet" />
    <link href="~/Scripts/plugins/bootstrap-tokenfield/dist/css/bootstrap-tokenfield.css" rel="stylesheet" />
    <link href="~/Scripts/plugins/bootstrap-tokenfield/dist/css/tokenfield-typeahead.css" rel="stylesheet" />
}
<div class="wrapper">
    <div class="inner-bg">
        <section class="content-header">
            <h1>Recipe</h1>
        </section>
        <section class="content">
            <partial name="_Notification" />
            <div class="cmxform donor-form referrals-form">


                <div class="table-top add-btn-main">
                    <a class="add-food-btn" href="~/Foodbank/Recipe/AddRecipe">
                        <img src="~/Content/images/add.png" alt="">Add Recipe
                    </a>
                </div>

                <table id="recipe-grid" class="table table-bordered table-responsive table-striped table-condensed food-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>S.No</th>
                            <th>Recipe Title</th>
                            <th>Food Items</th>
                            <th>Action </th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>

            </div>

        </section>
    </div>
</div>
<partial name="_Modal" model='new Modal { ID="modal-delete-recipe" , AreaLabeledId="modal-delete-recipe-label" , Size=ModalSize.Medium }' />

@section scripts{
    <script src="~/Scripts/plugins/select2/select2.js"></script>
    <script src="~/Scripts/plugins/input-mask/jquery.inputmask.js"></script>
    <script src="~/Scripts/plugins/input-mask/jquery.inputmask.date.extensions.js"></script>
    <script src="~/Scripts/plugins/datepicker/bootstrap-datepicker.js"></script>
    <script src="~/Scripts/custom/FoodbankRecipe/foodbankRecipe.js"></script>
    <script src="~/Scripts/plugins/bootstrap-tokenfield/dist/bootstrap-tokenfield.js"></script>


}