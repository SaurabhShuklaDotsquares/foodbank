@model FB.Dto.Professiondto
<div id="adminUpdateVetMedicationModal">
    <!-- Modal content-->
    @using (Html.BeginForm("AddEditProfession", "Profession", FormMethod.Post, new { @class = "donat-popup-form" }))
    {
        <input asp-for="FoodBankId" type="hidden" />
        <input asp-for="ProfessionId" type="hidden" />
        <div class="modal-content">
            <div class="modal-header">
                <!-- modal header  -->
                <button type="button" id="btn-cancel" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title"> @(Model.ProfessionId>0? "Edit Food Profession" : "Add Food Profession")</h4>
            </div>
            <div class="modal-body">

                <div class="form-group">
                    <label class="col-xs-12 col-sm-4 control-label" for="Title">Profession Name</label>
                    <div class="col-xs-12 col-sm-8">
                        <input asp-for="Title" id="Title" name="Title" class="form-control" placeholder="" type="text" required>
                        <span asp-validation-for="Title" class="text-red"></span>
                    </div>
                </div>
            </div>
            <div class="frm-footer">
                <button class="btn btn-primary" id="btn-submit" type="submit">
                    Submit
                    <i class="fa fa-arrow-circle-right"></i>
                </button>
            </div>
            <!-- end modal body content  -->
        </div>
    }
</div>
