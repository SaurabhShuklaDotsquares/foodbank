@model FB.Dto.Professiondto
@{
    ViewBag.Title = "Index";
}
@section head{
    <link href="~/Content/datatables/dataTables.bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-switch.css" rel="stylesheet" />
    <link href="~/Scripts/plugins/alertify/css/alertify.css" rel="stylesheet" />

}
<div class="wrapper">
    <div class="">
        <div class="inner-bg">
            <section class="content-header">
                <h1>
                    My Profession
                </h1>
            </section>
            <section class="content">
                <div class="cmxform donor-form referrals-form">
                    <input asp-for="FoodBankId" type="hidden" id="hdnFoodBankId" value="@Model.FoodBankId" />
                    <div class="tab-content donations-tab">
                        <div id="fooddonation" class="tab-pane active">
                            <div class="content form-horizontal">
                                <div class="table-top">
                                    <a type="button" data-toggle="modal" data-target="#modal-add-Profession" class="add-food-btn" href="@Url.Action("AddEditProfession","Profession")">
                                        Add Professsion
                                    </a>
                                </div>
                                <div id="fooddonation">
                                    <table id="grid-Profession" class="table table-bordered table-responsive table-striped table-condensed food-table">
                                        <thead>
                                            <tr>
                                                <th>#</th>
                                                <th>S.No</th>
                                                <th>Profession Name</th>
                                                <th>Modify Date</th>
                                                <th width="15%">Action</th>
                                            </tr>
                                        </thead>
                                        <tbody></tbody>
                                        <tfoot></tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>

<partial name="_modal" model='new Modal { ID="modal-add-Profession" , AreaLabeledId ="modal-add-Profession-label" , Size = ModalSize.Medium }' />
<partial name="_modal" model='new Modal { ID="modal-delete-Profession" , AreaLabeledId = "modal-delete-Profession-label" , Size=ModalSize.Medium }' />

@section scripts{
    <script src="~/Scripts/custom/profession/profession.js"></script>
}
