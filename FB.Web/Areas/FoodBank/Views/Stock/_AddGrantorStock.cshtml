@model FB.Dto.StockFoodDonationDto
<div id="adminUpdateVetMedicationModal">
    <!-- Modal content-->
    @using (Html.BeginForm("AddFoodDonation", "Stock", FormMethod.Post, new { @class = "donat-popup-form" }))
    {
        <div class="modal-content">
            <div class="modal-header">
                <!-- modal header  -->
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title"> Update Stock</h4>
            </div>
            <div class="modal-body">
                <!-- begin modal body content  -->
                <input type="hidden" asp-for="StockId" />
                <input type="hidden" asp-for="FoodItemId" />
                <input type="hidden" asp-for="QuantityUnit" />
                <input type="hidden" asp-for="hdnFoodCategoryId" />
                <input type="hidden" asp-for="hdnFoodProductId" />
                <div class="form-group">
                    <label class="col-xs-12 col-sm-4 control-label" for="Title">Food Items</label>
                    <div class="col-xs-12 col-sm-8">
                        <input asp-for="FoodItemName" name="FoodItemName" class="form-control" type="text" disabled>
                        <span asp-validation-for="FoodItemName" class="text-red"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-xs-12 col-sm-4 control-label" for="Title">Date Of Donation*</label>
                    <div class="col-xs-12 col-sm-8">
                        <input asp-for="DonationDate" name="DonationDate" class="form-control datepicker" placeholder="DD/MM/YYYY" type="text" disabled>
                        <span asp-validation-for="DonationDate" class="text-red"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-xs-12 col-sm-4 control-label" for="Title">Quantity*</label>
                    <div class="col-xs-12 col-sm-4">
                        <input asp-for="Quantity" class="form-control" placeholder="Quantity" type="number" min="1">
                        <span asp-validation-for="Quantity" class="text-red"></span>
                    </div>
                    <div class="col-xs-12 col-sm-4">
                        <input asp-for="QuantityUnit" class="form-control" placeholder="Unit" type="text" disabled>
                        <span asp-validation-for="QuantityUnit" class="text-red"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-xs-12 col-sm-4 control-label" for="Title">Choose Donor</label>
                    <div class="col-xs-12 col-sm-8">
                        <select asp-for="DonorId" id="DonorId" class="form-control" name="DonorId" asp-items="@((List<SelectListItem>)ViewBag.donorList)"></select>
                        
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-xs-12 col-sm-4 control-label" for="GrantorId">Choose Donor</label>
                    <div class="col-xs-12 col-sm-8">
                        <select asp-for="GrantorId" id="DonorId" class="form-control" name="GrantorId" asp-items="@((List<SelectListItem>)ViewBag.GrantorList)"></select>
                        
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-xs-12 col-sm-4 control-label" for="CauseOfDonation">Cause Of Donation</label>
                    <div class="col-xs-12 col-sm-8">
                        <textarea asp-for="CauseOfDonation" class="form-control" placeholder="Cause Of Donation" type="text" rows="5"></textarea>
                        <span asp-validation-for="CauseOfDonation" class="text-red"></span>
                    </div>
                </div>
            </div>
            <div class="frm-footer">
                <button class="btn btn-primary" id="btn-submit" type="submit">
                    Submit
                    <i class="fa fa-arrow-circle-right"></i>
                </button>
            </div>
            <!-- end modal body content  -->
        </div>
    }
</div>
