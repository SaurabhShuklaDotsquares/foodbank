@model FB.Dto.NoteDto
<div class="box-header">

    <div class="btn-group">
        <a id="AddNote" asp-controller="Notes" asp-action="CreateEdit" data-toggle="modal" data-target="#modal-create-edit-note" class="btn btn-primary btnHide ps3">
            Add Note
        </a>
    </div>
    <div class="btn-group">
        <a id="EditNote" asp-controller="Notes" asp-action="CreateEdit" data-toggle="modal" data-target="#modal-create-edit-note" class="btn btn-primary btnHide ps3" disabled="true">
            Edit
        </a>
    </div>

    <div class="btn-group">
        <a id="DeleteNote" asp-controller="Notes" asp-action="Delete" data-toggle="modal" dat data-target="#modal-delete-note" class="btn btn-danger btnHide ps3" disabled="true">
            Delete
        </a>
    </div>

</div>


<div class="box-body ">
    <input type="hidden" id="hdnCurrentUserId" data-rolename="@( CurrentUser.RoleID>10 ? string.Empty :  ((UserRoles)CurrentUser.RoleID).GetDescription())" value="@CurrentUser.UserID" />
    <div class="table-responsive">
        <div class="col-lg-6 col-sm-6">
            <table id="grid-person-note" class="table table-bordered table-striped table-hover tbl_bg_clr row-pointer">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Description</th>

                    </tr>
                </thead>
            </table>
        </div>
        <div class="col-lg-6 col-sm-6 note-div1">
            <textarea id="txtNote" class="form-control note" cols="75" rows="20"></textarea>
        </div>
    </div>
</div>

